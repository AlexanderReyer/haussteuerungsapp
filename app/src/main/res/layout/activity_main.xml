<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xander.haussteuerung.MainActivity">

    <EditText
        android:id="@+id/edtOutput"
        android:layout_width="800dp"
        android:layout_height="400dp"
        android:ems="10"
        android:focusedByDefault="false"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/btnSSDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusedByDefault="true"
        android:text="SSDP GerÃ¤te suchen"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="9dp" />

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="256dp"
        android:gravity="right|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></LinearLayout>

    <RelativeLayout
        android:id="@+id/rlButtons"
        android:layout_width="295dp"
        android:layout_height="456dp"
        android:gravity="top|left|fill_horizontal"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="75dp">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
